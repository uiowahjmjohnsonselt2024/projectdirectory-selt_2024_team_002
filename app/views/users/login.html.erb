<%= stylesheet_link_tag 'login-logout', media: 'all', 'data-turbolinks-track' => true %>
<div class="container">
    <% if flash[:alert] %>
      <div class="alert login_alert_box">
        <div class="alert_icon"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm0-384c13.3 0 24 10.7 24 24l0 112c0 13.3-10.7 24-24 24s-24-10.7-24-24l0-112c0-13.3 10.7-24 24-24zM224 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0z"/></svg></div>
        <div class="alert_spacer"></div>
        <%= flash[:alert] %>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="alert login_alert_box">
        <div class="alert_icon"><svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="30" height="30" viewBox="0 0 30 30">
          <path d="M15,3C8.373,3,3,8.373,3,15c0,6.627,5.373,12,12,12s12-5.373,12-12C27,8.373,21.627,3,15,3z M21.707,12.707l-7.56,7.56 c-0.188,0.188-0.442,0.293-0.707,0.293s-0.52-0.105-0.707-0.293l-3.453-3.453c-0.391-0.391-0.391-1.023,0-1.414s1.023-0.391,1.414,0 l2.746,2.746l6.853-6.853c0.391-0.391,1.023-0.391,1.414,0S22.098,12.316,21.707,12.707z"></path>
          </svg></div>
        <div class="alert_spacer"></div>
        <%= flash[:notice] %>
      </div>
    <% end %>
  <div class="center_container">
    <%= form_tag "/users/get-session", class: "form", method: :post do %>
      <h1 class="signup_text">Log In</h1>
      <div class="form_element_container full_width_respect_padding">
          <label for="user_name">Username:</label>
          <input type="text" name="user_name" id="user_name" class="full_width_respect_padding textbox">
      </div>
      <div class="form_element_container full_width_respect_padding">
          <label for="password">Password:</label>
          <input type="password" name="password" id="password" class="full_width_respect_padding textbox">
      </div>
      <div class="spacer"></div>
      <button type="submit" class="highlight_button login">Log In</button>
      <div class="spacer"></div>
      <a href="/users/new" class="secondary_button login"><button class="secondary_button login">Create Account</button></a>
    <% end %>
  </div>
</div>