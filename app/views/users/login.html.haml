= stylesheet_link_tag asset_path("login-logout.css")

%div{class: "container"}
    %div{class: "center_container"}
        =form_for :user,url: '/users/login', method: :post, :html => {class: "form"} do |f|
            %h1{class: "signup_text"} Log in
            %div{class: "form_element_container full_width_respect_padding"}
                = f.label :user_name, "User name:"
                = f.text_field :user_name, class: "full_width_respect_padding"
            %div{class: "form_element_container full_width_respect_padding"}
                = f.label :password, "Password:"
                = f.text_field :password, class: "full_width_respect_padding"
            %div{class: "buttons_container"}
                = link_to "Sign Up", url_for(controller: 'users', action: 'new'), class: "fake_a_button", method: :get
                %div{class: 'spacer'}
                = f.button "Log In"